docker network create jchat-network
docker network ls

docker run \
	--rm \
	--name mysql \
	-e MYSQL_ROOT_PASSWORD=tajneHaslo \
	-e MYSQL_DATABASE=jchat \
	-v jchat-volume:/var/lib/mysql \
	--network jchat-network \
	-d \
	mysql:8.4.0

docker build -t javastart/jchat .

docker run \
    -it \
    --rm \
    --name jchat \
    --network jchat-network \
    -p 8080:8080 \
    javastart/jchat